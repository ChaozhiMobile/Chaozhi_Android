<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <TextView
        android:id="@+id/forget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="找回密码"
        android:textColor="@color/_24253D"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <EditText
        android:id="@+id/forget_phone"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/_F5F5F5"
        android:gravity="center_vertical"
        android:hint="输入注册手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingStart="10dp"
        android:textColor="@color/_24253D"
        android:textColorHint="@color/_7F24253D"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_title" />


    <EditText
        android:id="@+id/forget_code"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/_F5F5F5"
        android:gravity="center_vertical"
        android:hint="输入验证码"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingStart="10dp"
        android:textColor="@color/_24253D"
        android:textColorHint="@color/_7F24253D"
        android:textSize="15sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_phone" />

    <TextView
        android:id="@+id/forget_get_code"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:text="获取验证码"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:background="@drawable/shape_reg_code"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="@id/forget_code"
        app:layout_constraintTop_toTopOf="@id/forget_code"
        app:layout_constraintBottom_toBottomOf="@id/forget_code"
        />

    <EditText
        android:id="@+id/forget_pwd"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/_F5F5F5"
        android:gravity="center_vertical"
        android:hint="输入新密码"
        android:paddingStart="10dp"
        android:textColor="@color/_24253D"
        android:textColorHint="@color/_7F24253D"
        android:textSize="15sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_code" />

    <TextView
        android:id="@+id/forget_submit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/shape_login"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />


</android.support.constraint.ConstraintLayout>