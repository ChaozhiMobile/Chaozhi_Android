<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorWhite"
    android:minHeight="60dp">

    <ImageView
        android:id="@+id/item_datalibrary_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:src="@mipmap/ic_pdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_datalibrary_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="[心理测试技能]第一节"
        android:textColor="@color/_24253D"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/item_datalibrary_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_datalibrary_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="0MB"
        android:textColor="@color/_B4B4B4"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@id/item_datalibrary_icon"
        app:layout_constraintTop_toBottomOf="@+id/item_datalibrary_name" />

    <Button
        android:id="@+id/item_datalibrary_delete"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_theme_border"
        android:text="删除"
        android:textColor="@color/_C31A1F"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/_E0E0E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>