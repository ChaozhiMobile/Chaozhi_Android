<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="104dp"
    android:background="@color/colorWhite"
    >


    <ImageView
        android:id="@+id/item_new_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        app:layout_goneMarginStart="12dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_feature_product"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/item_new_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2018年ACI心理咨询师健康"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/_1D1D26"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        app:layout_constraintLeft_toRightOf="@id/item_new_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/item_new_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="心理咨询师2018的健康咨询，心理咨询师2018的健康咨询，心理咨询师2018的健康咨询，心理咨询师2018的健康咨询…"
        android:textColor="@color/_B4B4B4"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginRight="12dp"
        app:layout_constraintLeft_toRightOf="@id/item_new_img"
        app:layout_constraintTop_toBottomOf="@id/item_new_title"
        app:layout_constraintRight_toRightOf="parent"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/_E6E6E6"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>